#        inactive_workspace #282A36 #282A36 #BFBFBF
#        urgent_workspace   #FF5555 #FF5555 #F8F8F2
#        binding_mode       #FF5555 #FF5555 #F8F8F2
#  }	
#}

# start polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# i3 dracula clor scheme
# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36

client.background       #F8F8F2

# set keyboard layout
exec_always "setxkbmap -layout tr"

# screen size and refresh rate
exec_always xrandr -s 1920x1080 -r 144

# set wallpaper
exec_always feh --bg-fill --randomize /home/$USER/.wallpapers/038.jpg

# picom for transparency
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf

# taking screenshot
bindsym Print exec --no-startup-id maim "/home/$USER/Resimler/Screenshots/$(date).png"
bindsym $mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Resimler/Screenshots/$(date).png"
bindsym Shift+Print exec --no-startup-id maim --select "/home/$USER/Resimler/Screenshots/$(date).png"

# taking clipboard screenshot
bindsym Ctrl+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

# auto usb mount
exec udiskie --tray

